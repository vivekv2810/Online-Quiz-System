{
  "compilerOptions": {
    "target": "es6",                  
    "module": "commonjs",             
    "outDir": "./dist",               
    "rootDir": "./src",               
    "strict": true,                   
    "esModuleInterop": true,          
    "skipLibCheck": true,             
    "forceConsistentCasingInFileNames": true  
  },
  "include": [
    "src/**/*.ts",                    // Include all TypeScript files in the 'src' directory
    "src/types/**/*.d.ts"             // Include type definition files in the 'src/types' directory
  ],
  "exclude": [
    "node_modules",                   
    "public"                          
  ]
}